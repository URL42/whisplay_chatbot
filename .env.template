OPENAI_API_KEY=sk-your-openai-key
# Optional: point to a custom endpoint (Azure, VLLM proxy, etc.)
# OPENAI_BASE_URL=https://api.openai.com/v1

# Persona behaviour: random | rotate | fixed
WHISPLAY_PERSONA_MODE=random
# Only used if persona mode is "fixed"
# WHISPLAY_PERSONA_NAME=Arcade Ally

# Run without hardware (keyboard controls & file playback)
WHISPLAY_ENABLE_SIMULATION=0

# Button hold timeout before recording auto-stops
WHISPLAY_MAX_RECORD_SECONDS=12

# Idle hint cadence
WHISPLAY_IDLE_TIMEOUT_SECONDS=180

# Preferred TTS voice
WHISPLAY_TTS_VOICE=alloy

# Supply a JSON file with additional personas (optional)
# WHISPLAY_PERSONAS_PATH=/home/pi/custom_personas.json
